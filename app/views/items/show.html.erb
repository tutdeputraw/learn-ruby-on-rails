<div class="position-relative">
  <div class="position-absolute top-0 start-0">
    <button type="button" class="btn btn-primary m-5" onclick="history.back()">BACK</button>
  </div>
</div>

<div class="d-flex flex-column justify-content-md-center align-items-center vh-100">
  <div class="w-25">
    <h4>Item Detail</h4>
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" id="name" name="name" value="<%= @item.name %>" class="form-control" disabled>
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input type="number" id="price" name="price" value="<%= @item.price %>" class="form-control" disabled>
    </div>
  </div>
</div>